{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-native",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "declaration": true,
        "emitDeclarationOnly": true,
        "noEmit": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": "types",
        "typeRoots": ["types"]
    },
    "exclude": ["__tests__/**/*-test.ts"]
}
